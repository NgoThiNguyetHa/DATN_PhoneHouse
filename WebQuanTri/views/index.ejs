<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        *,
        ::after,
        ::before {
            box-sizing: border-box;
        }

        h3 {
            font-size: 1.2375rem;
            color: #000000;
        }

        a {
            cursor: pointer;
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
            color: black;
        }

        li {
            list-style: none;
        }

        /* Layout skeleton */

        .wrapper {
            align-items: stretch;
            display: flex;
            width: 100%;
        }

        #sidebar {
            max-width: 264px;
            min-width: 264px;
            transition: all 0.35s ease-in-out;
            box-shadow: 0 0 35px 0 rgba(49, 57, 66, 0.5);
            z-index: 1111;
        }

        /* Sidebar collapse */

        #sidebar.collapsed {
            margin-left: -264px;
        }

        .main {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            width: 100%;
            overflow: hidden;
            transition: all 0.35s ease-in-out;
        }

        .sidebar-logo {
            padding: 1.15rem 1.5rem;
        }

        .sidebar-logo a {
            color: #000000;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .sidebar-nav {
            padding: 0;
        }

        .sidebar-header {
            color: #000000;
            font-size: .75rem;
            padding: 1.5rem 1.5rem .375rem;
        }

        a.sidebar-link {
            padding: .625rem 1.625rem;
            color: #000000;
            position: relative;
            display: block;
            font-size: 1rem;
        }

        .sidebar-link[data-bs-toggle="collapse"]::after {
            border: solid;
            border-width: 0 .075rem .075rem 0;
            content: "";
            display: inline-block;
            padding: 2px;
            position: absolute;
            right: 1.5rem;
            top: 1.4rem;
            transform: rotate(-135deg);
            transition: all .2s ease-out;
        }

        .sidebar-link[data-bs-toggle="collapse"].collapsed::after {
            transform: rotate(45deg);
            transition: all .2s ease-out;
        }

        .content {
            flex: 1;
            max-width: 100vw;
            width: 100vw;
        }
        i{
            width: 25px;
        }
        #navigation{
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
        #account{
            display: flex;
            gap: 10px;
            margin-right: 20px;
        }
        #account p{
            margin: 0;
        }
        .selected {
            background-color: #d2d2d2;
            margin-left: 10px;
            margin-right: 10px;
            border-radius: 15px;
        }
        /* Responsive */
        @media (min-width: 768px) {
            .content {
                width: auto;
            }
        }
    </style>
</head>
<body>
<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#" onclick="loadPage(event, 'quanLyDienThoaiW')">PhoneHouse</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">

                <!-- Cửa hàng  -->
                <li class="sidebar-header">
                    Cửa hàng
                </li>
                <li class="sidebar-item selected">
                    <a  class="sidebar-link" onclick="loadPage(event, 'quanLyDienThoaiW')">
                        <i class="fa-solid fa-mobile-screen-button"></i>
                        Quản Lý Điện Thoại
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link" onclick="loadPage(event, 'quanLyHangSanXuatW')">
                        <i class="fa-brands fa-bandcamp"></i>
                        Hãng Sản Xuất
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link" onclick="loadPage(event, 'quanLyUuDaiW')">
                        <i class="fa-solid fa-ticket"></i>
                        Quản Lý Ưu Đãi
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link" onclick="loadPage(event, 'quanLyDonHangW')">
                        <i class="fa-solid fa-file-invoice-dollar"></i>
                        Quản Lý Đơn Hàng
                    </a>
                </li>

                <li class="sidebar-item" onclick="loadPage(event, 'thongKeW')">
                    <a href="#" class="sidebar-link">
                        <i class="fa-solid fa-chart-line"></i>
                        Thống Kê
                    </a>
                </li>

                <!-- Hệ thống  -->
                <li class="sidebar-header">
                    Hệ thống
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link" onclick="loadPage(event, 'cuaHangLienKetW')">
                        <i class="fa-solid fa-store"></i>
                        Cửa Hàng Liên Kết
                    </a>
                </li>

                <!-- Tài khoản  -->
                <li class="sidebar-header">
                    Tài khoản
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link" onclick="loadPage(event, 'doiMatKhauW')">
                        <i class="fa-solid fa-lock"></i>
                        Thông tin cá nhân
                    </a>
                </li>
                <li class="sidebar-item">
                    <a
                            onclick="handleLogout(event)"
                            href="#"
                            class="sidebar-link" >
                        <i class="fa-solid fa-right-to-bracket"></i>
                        Đăng Xuất
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom" id="navigation">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="dark">
                <span><i class="fa-solid fa-bars" style="color: #000000;"></i></span>
            </button>
            <div id="account">
                <% if (typeof account !== 'undefined' ) { %>
                <span style="display: none" id="accountInfo"><%= JSON.stringify(account) %></span>
                    <p style="color: black; font-weight: bold">
                        Welcome, <%= account.username %>!
                    </p>
                <% } %>
                    <span><i class="fa-solid fa-circle-user" style="font-size: 25px"></i></span>
            </div>
        </nav>
        <main class="content px-3 py-2">
            <div class="content" id="mainContent">
                <!-- Phần nội dung chính của trang sẽ được thêm ở đây -->

            </div>
        </main>
    </div>
</div>
<script>
  const toggler = document.querySelector(".btn");
  toggler.addEventListener("click", function () {
    document.querySelector("#sidebar").classList.toggle("collapsed");
  });
  const pageResponse = '<%= page%>';
  if (pageResponse){
    fetch('http://localhost:8686/' + pageResponse)
        .then(response => response.text())
        .then(html => {
          document.getElementById('mainContent').innerHTML = html;
        })
        .catch(error => console.error('Error:', error));
  }
  function loadPage(event, page) {
    event.preventDefault();
    fetch('http://localhost:8686/' + page)
        .then(response => response.text())
        .then(html => {
          document.getElementById('mainContent').innerHTML = html;
        })
        .catch(error => console.error('Error:', error));
  }

  function handleLogout(event) {
    event.preventDefault();

    const confirmLogout = confirm("Bạn có chắc chắn muốn đăng xuất?");

    // Xử lý khi người dùng xác nhận đăng xuất
    if (confirmLogout) {
      // Thực hiện đăng xuất (chuyển hướng hoặc gọi API đăng xuất)
      window.location.href = "http://localhost:8686/dangNhapW";
    }
  }
  if ('<%= message%>'){
    alert('<%= message%>')

  }
  const sidebarItems = document.querySelectorAll('.sidebar-item');
  //set màu cho item menu khi được chọn
  sidebarItems.forEach(item => {
    item.addEventListener('click', function() {
      // Loại bỏ tất cả các lớp đã chọn trước đó
      sidebarItems.forEach(item => {
        item.classList.remove('selected');
      });

      // Thêm lớp đã chọn cho mục được nhấp
      this.classList.add('selected');
    });
  });

  // const account = document.getElementById("accountInfo");
  // if (account) {
  //   const accountValue = JSON.parse(account.textContent || "{}");
  //   localStorage.setItem("loggedInAccount", JSON.stringify(accountValue));
  // }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>
</html>
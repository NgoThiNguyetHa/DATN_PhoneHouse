<script>
  const toggler = document.querySelector(".btn");
  toggler.addEventListener("click", function () {
    document.querySelector("#sidebar").classList.toggle("collapsed");
  });

  // Lấy tất cả các liên kết trong sidebar
  const sidebarLinks = document.querySelectorAll(".sidebar-link");
  sidebarLinks.forEach(function (link) {
    link.addEventListener("click", function (event) {
      // Ngăn chặn hành vi mặc định của liên kết
      event.preventDefault();

      // Lấy href của liên kết được nhấp
      const href = link.getAttribute("href").replace("#", "");

      // Ẩn tất cả các phần tử trong Main Component
      const mainContents = document.querySelectorAll(".main-content");
      mainContents.forEach(function (content) {
        content.style.display = "none";
      });

      // Hiển thị phần tử tương ứng với trang được chọn
      document.getElementById(href).style.display = "block";
    });
  });
</script>

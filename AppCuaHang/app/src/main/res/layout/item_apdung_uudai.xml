<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardElevation="10dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="30dp"
    android:layout_margin="5dp"
    android:id="@+id/item_frame"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mUD"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:src="@drawable/image_counpon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/item_tvGiamGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Giảm giá \n 45%"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    >
                    <TextView
                        android:id="@+id/item_textViewThoiGian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thời gian"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_tvThoiGian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18 th09, 2023"
                        android:textColor="#928C8C"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_tvTrangThai"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_hoat_dong"
                    android:padding="7dp"
                    android:text="Hoạt động"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
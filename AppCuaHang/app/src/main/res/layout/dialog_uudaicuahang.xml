<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.UuDaiFragment"
    app:cardCornerRadius="20dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dl_uuDai_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Áp dụng ưu đãi"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"
            android:background="#56B247"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc__udch_uuDai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                tools:listitem="@layout/item_apdung_uudai"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dl_udch_btnXacNhan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Xác nhận"
                android:textStyle="bold"
                android:background="@drawable/bg_delete_yes"
                android:layout_margin="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dl_udch_btnHuy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Huỷ"
                android:textStyle="bold"
                android:background="@drawable/bg_delete_no"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>






</androidx.cardview.widget.CardView>
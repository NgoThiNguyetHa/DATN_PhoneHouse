<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvViewTenKhachHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_sao_xam_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating_star_xam" />

                <ImageView
                    android:id="@+id/img_sao_xam_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating_star_xam" />

                <ImageView
                    android:id="@+id/img_sao_xam_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating_star_xam" />

                <ImageView
                    android:id="@+id/img_sao_xam_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating_star_xam" />

                <ImageView
                    android:id="@+id/img_sao_xam_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating_star_xam" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/tvViewNgayDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đánh giá"
                android:layout_marginLeft="35dp"/>
        <TextView
            android:id="@+id/tvViewNoiDungDG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung đánh giá"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:id="@+id/img_viewAnhDG"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp">
                <ImageView
                    android:id="@+id/imgViewAnhDT"
                    android:layout_width="30dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:background="#EFEFEF"
                    android:id="@+id/tvViewTenDT"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="Tên điện thoại"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.cardview.widget.CardView>
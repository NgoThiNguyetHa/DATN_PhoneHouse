<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DetailScreenFragment"
    android:background="#FFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/detailScreen_lnBottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/imgAnhChiTiet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/baseline_camera_alt_24"/>
                <TextView
                    android:id="@+id/tv_tenSPChiTiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Tên điện thoại--"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/detailScreen_tvMau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:background="@drawable/linear_textview"/>
                    <TextView
                        android:id="@+id/detailScreen_tvRam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ram"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:background="@drawable/linear_textview"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/detailScreen_tvDungLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dung lượng"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:background="@drawable/linear_textview"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_giaChiTiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="0đ"
                        android:textStyle="bold"
                        android:textColor="#FF0000"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/tv_giaTienGoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="0đ"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:layout_gravity="bottom"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/detailScreen_tvGiamGia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="0đ"
                        android:textStyle="bold"
                        android:textColor="#4A99A8"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_sao_vang"/>
                    <TextView
                        android:id="@+id/tv_danhGia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/tv_soLuongChiTiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng còn"
                        android:textColor="#858585"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                </LinearLayout>
                <TextView
                    android:text="Mô tả chi tiết"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_moTaChiTiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#858585"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/detailScreen_tvDanhGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá của khách hàng (0)"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detailScreen_rcDanhGia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/detailScreen_lnBottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số lượng"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:id="@+id/detailScreen_imgMinus"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/baseline_minus_24"
                            android:background="@drawable/button_nhan_hang"/>
                        <TextView
                            android:id="@+id/detailScreen_tvSoLuong"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="1"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:background="@drawable/button_nhan_hang"
                            />
                        <ImageView
                            android:id="@+id/detailScreen_imgAdd"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/baseline_add_24"
                            android:background="@drawable/button_nhan_hang"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/detailScreen_lnError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icones_d_eclair_rouge"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không đủ số lượng"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMuaLuon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mua ngay"
                    android:textColor="#000000"
                    android:background="@drawable/button_nhan_hang"
                    android:textStyle="bold"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddGioHang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm vào giỏ hàng"
                    android:textColor="#FFFFFF"
                    android:background="#4A99A8"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StoreDetailViewPager.ThongTinCuaHangFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ hủy đơn"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/ttCuaHang_tvTiLeHuyDon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textStyle="bold"
                        android:textColor="#49B447"
                        android:textSize="35dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ giao thành công"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/ttCuaHang_tvTiLeThanhCong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textStyle="bold"
                        android:textColor="#49B447"
                        android:textSize="35dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin Cửa Hàng"
                android:padding="10dp"
                android:background="#FFF"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/store_detail_product"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm:"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/ttCuaHang_tvSoLuongSanPham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0+"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFF"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/store_detail_mota"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả của hàng: Mua online sản phẩm của cửa hàng trên PhoneHouse. ✓ chất lượng cao, uy tín, giá tốt ✓ Chính hãng ✓ Giao hàng toàn quốc "
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/store_detail_stars"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá:"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/ttCuaHang_tvSoLuongDanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 / 5 (99+)"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#FF0000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/store_detail_email"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/ttCuaHang_tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PhoneHouse@gmail.com"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#6C6B6B"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh Giá Và Nhận Xét"
                android:padding="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:id="@+id/ttCuaHang_tvDanhGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/5"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/five_fill_stars"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/ttCuaHang_tvSoLuongDanhGia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0 đánh giá)"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#7F7F7F"
                        />
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    />
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/ttCuaHang_barChart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGetAll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tất cả"
                        android:textColor="#7F7F7F"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGetCoAnh"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Có ảnh (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGet5sao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="5 sao (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGet4sao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4 sao (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGet3sao"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3 sao (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGet2sao"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2 sao (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ttCuaHang_btnGet1sao"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1 sao (0)"
                        android:textColor="#7F7F7F"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_nhan_hang"/>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ttCuaHang_rcDanhGia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_danh_gia"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarSize="0dp"
                android:requiresFadingEdge="none"
                />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
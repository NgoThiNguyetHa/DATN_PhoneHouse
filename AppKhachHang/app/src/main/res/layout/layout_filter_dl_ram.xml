<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#f3f4f6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A99A8"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Bộ Lọc Dung Lượng Ram"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/filterDlRam_cv4GB_6GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_custom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4GB - 6GB"
                android:textStyle="bold"
                android:padding="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/filterDlRam_cv8GB_12GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_custom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8GB - 12GB"
                android:textStyle="bold"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterDlRam_cv16GB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_custom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16GB"
                android:textStyle="bold"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterDlRam_btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đóng"
            android:textColor="#000000"
            android:background="@drawable/button_nhan_hang"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterDlRam_btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xem Kết Quả"
            android:textColor="#FFFFFF"
            android:background="#4A99A8"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
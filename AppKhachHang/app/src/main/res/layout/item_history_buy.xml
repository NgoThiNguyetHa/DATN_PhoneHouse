<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_store"
                android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tvCuaHangDG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên cửa hàng"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F0F0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                     />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/bill_item_tvDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điện thoại"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/bill_item_tvMau"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Màu điện thoại"
                    />

                <TextView
                    android:id="@+id/bill_item_tvSoLuong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Số lượng"
                    android:layout_marginRight="15dp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/bill_item_tvTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"/>


        </LinearLayout>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F0F0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/transport_1"
                android:layout_marginLeft="10dp"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao hàng thành công"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/xanhla"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F0F0"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center|end"
           >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/linear_imgclose"
                android:text="Đánh giá"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:gravity="center"
                android:padding="10dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
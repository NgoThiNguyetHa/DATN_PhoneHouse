<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="150dp"
               app:cardBackgroundColor="#5FB1C1"
               android:layout_marginTop="20dp"
               android:layout_marginHorizontal="10dp"
               app:cardCornerRadius="10dp">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imgSlider"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:iss_period="1000"
                    app:iss_auto_cycle="true"
                    app:iss_delay="3000"
                    app:iss_corner_radius="20"
                    tools:ignore="MissingClass" />
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Hãng"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_hang"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layoutAnimation="@anim/layout_anim"
               >
           </androidx.recyclerview.widget.RecyclerView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Hot nhất"/>
               <ImageView
                   android:id="@+id/img_listSPHot"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end|center_vertical"
                   android:src="@drawable/right"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_sphot"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               tools:listitem="@layout/item_san_pham">
           </androidx.recyclerview.widget.RecyclerView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Sản phẩm"/>
               <ImageView
                   android:id="@+id/img_listSP"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end|center_vertical"
                   android:src="@drawable/right"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               tools:listitem="@layout/item_san_pham">
           </androidx.recyclerview.widget.RecyclerView>
       </LinearLayout>
   </ScrollView>


</FrameLayout>
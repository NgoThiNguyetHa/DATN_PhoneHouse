<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/filterGiaTien_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A99A8"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Bộ Lọc Giá Tiền"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/filterGiaTien_tvMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0đ"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:textStyle="bold"
            android:id="@+id/filterGiaTien_tvMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0đ"
            android:textAlignment="textEnd"
            />
    </LinearLayout>
    <com.mohammedalaa.seekbar.DoubleValueSeekBarView
        android:id="@+id/double_range_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:minValue="0"
        app:maxValue="100"
        app:r2CurrentMaxValue="100"
        app:r2CurrentMinValue="0"
        app:r2barHeight="5dp"
        app:r2circleFillColor="#D6D6D6"
        app:r2circleRadius="10dp"
        app:r2circleTextColor="#D6D6D6"
        app:r2baseColor="#D6D6D6"
        app:r2circleTextSize="@dimen/value_bar_circleTextSize"
        app:r2fillColor="@color/xanhduong"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterGiaTien_btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đóng"
            android:textColor="#000000"
            android:background="@drawable/button_nhan_hang"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterGiaTien_btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xem Kết Quả"
            android:textColor="#FFFFFF"
            android:background="#4A99A8"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
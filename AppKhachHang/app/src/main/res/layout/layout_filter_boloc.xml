<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/filterBoLoc_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A99A8"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Bộ Lọc"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Ram"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/filterBoLoc_cv4GB_6GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4GB - 6GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/filterBoLoc_cv8GB_12GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8GB - 12GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterBoLoc_cv16GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Dung Lượng"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/filterBoLoc_cv512GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trên 512GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterBoLoc_cv128GB_256GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128GB và 256GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/filterBoLoc_cv32GB_64GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32GB và 64GB"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Giá tiền"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/filterGiaTien_tvMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0đ"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/filterGiaTien_tvMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0đ"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <com.mohammedalaa.seekbar.DoubleValueSeekBarView
                android:id="@+id/double_range_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:minValue="0"
                app:maxValue="100"
                app:r2CurrentMaxValue="100"
                app:r2CurrentMinValue="0"
                app:r2barHeight="5dp"
                app:r2circleFillColor="#D6D6D6"
                app:r2circleRadius="10dp"
                app:r2circleTextColor="#D6D6D6"
                app:r2baseColor="#D6D6D6"
                app:r2circleTextSize="@dimen/value_bar_circleTextSize"
                app:r2fillColor="@color/xanhduong"
                android:layout_margin="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterBoLoc_btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đóng"
            android:textColor="#000000"
            android:background="@drawable/button_nhan_hang"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterBoLoc_btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xem Kết Quả"
            android:textColor="#FFFFFF"
            android:background="#4A99A8"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
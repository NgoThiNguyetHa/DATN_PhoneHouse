<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreDetailViewPager.SanPhamCuaHangFragment"
    android:background="#F5F5F5">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hãng sản xuất"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="16dp"/>
         </LinearLayout>
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/sanPham_rcFillterHangSX"
             android:layout_width="match_parent"
             android:layout_height="match_parent" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <TextView
                android:id="@+id/sanPhamCuaHang_tvSoLuongSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tất cả sản phẩm (0)"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="16dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_margin="5dp"
             >
            <LinearLayout
                android:id="@+id/sanPhamCuaHang_linearCaoDenThap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Giá cao đến thấp"
                   android:textStyle="bold"
                   android:padding="15dp"
                   />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sanPhamCuaHang_linearThapCao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Giá thấp đến cao"
                   android:textStyle="bold"
                   android:padding="15dp"
                   />
            </LinearLayout>
         </LinearLayout>
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/sanPham_rcSanPham"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             />
      </LinearLayout>

   </ScrollView>

</FrameLayout>
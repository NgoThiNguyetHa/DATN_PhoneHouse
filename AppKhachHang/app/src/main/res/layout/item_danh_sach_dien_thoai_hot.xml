<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:id="@+id/itemListPhone_bgSale"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:id="@+id/itemListPhoneHot_tvSale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sale 0%"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:background="@drawable/bg_sale_phone"
                android:padding="10dp"
                android:textSize="15dp"
                android:gravity="center"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/itemListPhoneHot_imgDienThoai"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_3"
            android:layout_below="@+id/itemListPhone_bgSale"/>
        <TextView
            android:id="@+id/itemListPhoneHot_tvTenDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên điện thoại----"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="5dp"
            android:textSize="15dp"
            android:maxLength="16"
            android:layout_below="@+id/itemListPhoneHot_imgDienThoai"
            />
        <LinearLayout
            android:id="@+id/itemListPhoneHot_RamDLMau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/itemListPhoneHot_tvTenDienThoai"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom_item_danh_sach"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/itemListPhoneHot_tvMau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu ---"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="9dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom_item_danh_sach"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/itemListPhoneHot_tvRam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- GB"
                    android:textStyle="bold"
                    android:textSize="9dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom_item_danh_sach"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/itemListPhoneHot_tvDungLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- GB"
                    android:textStyle="bold"
                    android:textSize="9dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemListPhoneHot_lnGiaTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_below="@+id/itemListPhoneHot_RamDLMau"
            >
            <TextView
                android:id="@+id/itemListPhoneHot_tvGiaTienGiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.999.999đ"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="13dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                />
            <TextView
                android:id="@+id/itemListPhoneHot_tvGiaTienGoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.999.999đ"
                android:textStyle="bold"
                android:textColor="#7B7B7B"
                android:textSize="11dp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_below="@+id/itemListPhoneHot_lnGiaTien"
            >
            <RatingBar
                android:id="@+id/itemListPhoneHot_rbDiemDanhGia"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:backgroundTint="#ffbd00"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#ffbd00"
                android:rating="0"
                android:secondaryProgressTint="@android:color/black"
                android:stepSize="1" />

<!--            <ImageView-->
<!--                android:id="@+id/itemListPhoneHot_imgCart"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:padding="5dp"-->
<!--                android:src="@drawable/icon_shopping_cart" />-->
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>